<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/guid_line" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/guid_line" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/guid_line" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layoutIds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@id/guideline_end"
        app:layout_constraintStart_toEndOf="@id/guideline_start"
        app:layout_constraintBottom_toTopOf="@id/tilUsername"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread">

    <RadioGroup
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rdbEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="پورتال کارکنان"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rdbSupervisors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="پورتال ناظران"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rdbManagers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="پورتال مدیران"/>
    </RadioGroup>
    <RadioGroup
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rdbContractors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="پورتال پیمانکاران"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rdbWarehouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مدیریت انبار"/>


        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rdbAssetManagement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اموال گردانی"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rdbValueEngineering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مهندسی ارزش"/>
    </RadioGroup>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColorHint="?android:textColorSecondary"
        app:layout_constraintEnd_toStartOf="@id/guideline_end"
        app:layout_constraintStart_toEndOf="@id/guideline_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:hint="user name"
            android:text="101818"
            android:textAlignment="center"
            android:textColor="?android:textColorPrimary"
            android:textColorHint="?android:textColorSecondary"
            android:textDirection="ltr"
            android:textSize="@dimen/textAppearanceCaption" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="?android:textColorSecondary"
        app:layout_constraintEnd_toStartOf="@id/guideline_end"
        app:layout_constraintStart_toEndOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/tilUsername"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_chainStyle="spread"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:text="123"
            android:textColor="?android:textColorPrimary"
            android:textColorHint="?android:textColorSecondary"
            android:textSize="@dimen/textAppearanceCaption" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="ورود"
        android:textColor="@color/white"
        android:textSize="@dimen/textAppearanceSubtitle2"
        app:layout_constraintEnd_toStartOf="@id/guideline_end"
        app:layout_constraintStart_toEndOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/tilPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="spread"/>

    <ProgressBar
        android:id="@+id/prcLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/guideline_end"
        app:layout_constraintStart_toEndOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintVertical_chainStyle="packed"/>

</androidx.constraintlayout.widget.ConstraintLayout>